{
  "name": "Maru",
  "version": "0.0.1",
  "description": "A lightweight, fast and extensible static code analyzer for smart contracts",
  "bin": "./maru",
  "dependencies": {
    "command-line-args": "5.0.2",
    "command-line-usage": "5.0.5",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-standard": "^2.1.6",
    "js-yaml": "^3.12.0",
    "logplease": "1.2.15",
    "mocha": "5.2.0",
    "require-all": "3.0.0",
    "solidity-parser-antlr": "*"
  },
  "scripts": {
    "clean": "rm -rf node_modules/ && rm -rf package-lock.json",
    "build:prod": "npm run clean && npm install",
    "build:dev": "npm run clean && npm run install:solidity-parser-antlr && npm install",
    "install:solidity-parser-antlr": "deps/solidity-parser-antlr.sh",
    "test": "npm run test:unit && npm run test:functional",
    "test:unit": "nyc mocha",
    "test:functional": "nyc mocha test/functional/ --timeout 10000",
    "lint": "eslint --ext .js ."
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "istanbul": "^0.4.5",
    "nyc": "^13.0.1"
  },
  "author": "Gerhard Wagner",
  "license": "MIT"
}
