{
    "name": "maru",
    "version": "0.3.1",
    "description": "A simple, rule based static code analyzer for Solidity smart contracts. ",
    "bin": "./maru",
    "dependencies": {
        "codecov": "^3.1.0",
        "command-line-args": "5.0.2",
        "command-line-usage": "5.0.5",
        "detect-installed": "^2.0.4",
        "js-yaml": "^3.12.0",
        "logplease": "1.2.15",
        "npm-install-version": "^6.0.2",
        "remix-lib": "^0.4.1",
        "remix-solidity": "^0.3.1",
        "require-all": "3.0.0",
        "semver": "^5.5.1",
        "solidity-parser-antlr": "*",
        "src-location": "^1.1.0",
        "string-template": "^1.0.0"
    },
    "scripts": {
        "dev": "tsc -w",
        "clean": "rm -rf node_modules/ && rm -rf package-lock.json && rm -rf dist/*",
        "build:prod": "npm run clean && npm install && npm run pre_install_supported_solc_versions && npm run updateswc && npm run tsc && chmod +x dist/maru.js && cp package.json dist/",
        "build:dev": "npm run clean && npm install && npm run updateswc && npm run tsc && chmod +x dist/maru.js && cp package.json dist/",
        "install:solidity-parser-antlr": "deps/solidity-parser-antlr.sh",
        "test": "./node_modules/.bin/nyc mocha  --timeout 1000000 'test/**/*.ts' -r ts-node/register || exit 1",
        "test:unit": "./node_modules/.bin/nyc mocha --timeout 1000000 test/unit/**/*.ts -r ts-node/register || exit 1",
        "test:integration": "./node_modules/.bin/nyc mocha --timeout 1000000 test/integration/*.ts -r ts-node/register || exit 1",
        "lint": "tslint -c tslint.json  -p .",
        "updateswc": "curl https://raw.githubusercontent.com/SmartContractSecurity/SWC-registry/master/export/swc-definition.json > src/swc-definition.json",
        "pre_install_supported_solc_versions": "./node_modules/.bin/nyc ts-node ./src/setup/install_solc.ts",
        "coverage_report_run": "npm run coverage_report_generate && npm run coverage_report_upload",
        "coverage_report_generate": "./node_modules/.bin/nyc report --reporter=text-lcov > coverage.lcov",
        "coverage_report_upload": "./node_modules/.bin/codecov -t '7b49539a-5cf4-4ff1-8174-2feba59eac14'",
        "tsc": "tsc"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.10.3",
        "expect": "^23.6.0",
        "istanbul": "^0.4.5",
        "mocha": "5.2.0",
        "nyc": "^13.1.0",
        "should": "^13.2.3",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3"
    },
    "author": "Gerhard Wagner",
    "license": ""
}
