{
  "name": "maru",
  "version": "0.1.0",
  "description": "A simple, rule based static code analyzer for Solidity smart contracts. ",
  "bin": "./maru",
  "dependencies": {
    "command-line-args": "5.0.2",
    "command-line-usage": "5.0.5",
    "js-yaml": "^3.12.0",
    "logplease": "1.2.15",
    "require-all": "3.0.0",
    "semver": "^5.5.1",
    "solidity-parser-antlr": "*"
  },
  "scripts": {
    "dev": "tsc -w",
    "clean": "rm -rf node_modules/ && rm -rf package-lock.json && rm -rf dist/*",
    "build:prod": "npm run clean && npm install && npm run updateswc && npm run tsc && chmod +x dist/maru.js && cp package.json dist/",
    "build:dev": "npm run clean && npm run install:solidity-parser-antlr && npm install && npm run updateswc && npm run tsc && chmod +x dist/maru.js && cp package.json dist/",
    "install:solidity-parser-antlr": "deps/solidity-parser-antlr.sh",
    "test": "./node_modules/.bin/nyc mocha test/**/*.ts -r ts-node/register || exit 0",
    "test:unit": "./node_modules/.bin/nyc mocha test/unit/* -r ts-node/register || exit 0",
    "test:swc": "./node_modules/.bin/nyc mocha test/SWC-test-case-runner/run.ts -r ts-node/register || exit 0",
    "test:functional": "nyc mocha test/functional/* -r ts-node/register || exit 0",
    "lint": "tslint -c tslint.json  -p .",
    "updateswc": "curl https://raw.githubusercontent.com/SmartContractSecurity/SWC-registry/master/export/swc-definition.json > src/swc-definition.json",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.10.3",
    "expect": "^23.6.0",
    "istanbul": "^0.4.5",
    "mocha": "5.2.0",
    "nyc": "^13.1.0",
    "should": "^13.2.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "author": "Gerhard Wagner",
  "license": ""
}
